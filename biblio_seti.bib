month = {aug},
title = {{The Galactic Club, or Galactic Cliques? Exploring the limits of interstellar hegemony and the Zoo Hypothesis}},
url = {http://arxiv.org/abs/1608.08770 http://dx.doi.org/10.1017/S1473550416000392},
year = {2016}
