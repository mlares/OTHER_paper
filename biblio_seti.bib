file = {:home/mlares/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Forgan et al. - 2015 - Evaluating Galactic Habitability Using High Resolution Cosmological Simulations of Galaxy Formation.pdf:pdf},
keywords = {simulation},
mendeley-tags = {simulation},
